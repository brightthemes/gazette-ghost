{{!< default}}

{{!-- Page header area --}}
{{#post}}
    {{!-- {{> page-head}} --}}
{{/post}}

{{!-- The main content area on the Contact page --}}
<div class="content full-width" role="main" id="content">
    <div class="map clearfix">
        <div class="map-overlay" onClick="style.pointerEvents='none'"></div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d10931.40934595139!2d23.590598!3d46.767807!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sro!2sro!4v1485686608234"
        style="border: 0; width: 100%; height: 400px;">
        </iframe>
    </div>
    <section id="contact-area" class="contact-area clearfix">
        <div class="col-sm-4 col-xs-12 contact-info lazyload animated fadeIn">
            <h3>Office</h3>
            601 E 54th St<br>
            New York City<br>
            New York<br>
            10000<br>
            <strong>Tel: </strong>1 234 567 890<br>
        </div>
        <div class="col-sm-8 col-xs-12 contact-form-area lazyload animated fadeIn">
            <div class="contact-bg-image"></div>
            <div class="wrap-contact">
                <form action="//formspree.io/youremail@domain.com" id="contact-form" class="contact-form clearfix" method="post">
                    <h2>Contact us</h2>
                    <div class="col-xs-12">
                        <input type="text" name="username" id="username" title="Name" placeholder="Name" required>
                    </div>
                    <div class="col-xs-12">
                      <input type="text" name="email" id="email" title="Email" class="email" placeholder="Email" required>
                    </div>
                    <div class="clear"></div>
                    <div class="col-md-12">
                        <textarea rows="10" cols="10" name="message" id="message" title="Message" placeholder="Message" required></textarea>
                    </div>
                    <input type="text" name="_gotcha" style="display:none">
                    <div class="col-xs-12 submit-button">
                        <input class="" type="submit" name="submit" id="submit" value="Submit">
                    </div>
                </form>
            </div>
        </div>
        <div class="clear"></div>
    </section>
</div>