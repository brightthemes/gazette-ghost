{{!-- Subscribers --}}
<form method="post" action="/subscribe/" class="clearfix">
    {{! This is required for the form to work correctly }}
    <input class="confirm" type="hidden" name="confirm">
    <input class="location" type="hidden" name="location" value="{{@blog.url}}">
    <input class="referrer" type="hidden" name="referrer" value="{{url}}">
    <div class="form-group gh-form-group {{#if error}} error{{/if}}">
    	{{input_email class=input_class placeholder=placeholder value=email autofocus=autofocus}}
    </div>
    <button class="{{button_class}}" type="submit"><i class="fa fa-2x fa-paper-plane-o" aria-hidden="true"></i></button>
    {{! This is used to get extra info about where this subscriber came from }}
    {{script}}
</form>

{{#if error}}
    <p class="main-error">{{{error.message}}}</p>
{{/if}}
