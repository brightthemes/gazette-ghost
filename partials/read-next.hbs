{{!-- Links to Previous/Next posts --}}
<div class="read-next animated fadeIn clearfix">
  {{!-- Prevoius Post --}}
  {{#prev_post}}
    <a class="read-next__story prev {{^if img_url}}no-image{{/if}}" href="{{url}}">
      {{#if img_url}}
        <div class="lazyload blur read-next__image" data-src="{{img_url}}" 
            style="background-image: url({{img_url}})"></div>
      {{/if}}
      <div class="read-next__info">
        <h3 class="read-next__title">{{title}}</h3>
      </div>
    </a>
  {{/prev_post}}

  {{!-- Next Post --}}
  {{#next_post}}
    <a class="read-next__story next {{^if img_url}}no-image{{/if}}" href="{{url}}">
      {{#if img_url}}
        <div class="lazyload blur read-next__image" data-src="{{img_url}}" 
            style="background-image: url({{img_url}})"></div>
      {{/if}}
      <div class="read-next__info">
        <h3 class="read-next__title">{{title}}</h3>
      </div>
    </a>
  {{/next_post}}
</div>