{{!-- Site header --}}
<header>
    <div class="navbar navbar-follow">
      	{{!-- Site Media Links --}}
        {{> social-media}}
    </div>

    {{!-- Default navigation --}}
    <nav class="navbar navbar-default">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-controls="navbar">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar top-bar"></span>
                <span class="icon-bar middle-bar"></span>
                <span class="icon-bar bottom-bar"></span>
            </button>
            <button type="button" class="search-open navbar-toggle collapsed">
                <i class="fa fa-search fa-rotate-90"></i>
            </button>
            {{#if @blog.logo}}
                <div class="logo">
                    <a href="{{@blog.url}}">
                        <img src="{{@blog.logo}}" alt="{{@blog.title}}"/>
                    </a>
                </div>
            {{else}}
                <div class="logo">
                    <a class="navbar-brand" href="{{@blog.url}}">{{@blog.title}}</a>
                </div>
            {{/if}}
        </div>
        <div id="navbar" class="navbar-collapse collapse">
    		{{navigation}}
            <ul class="nav navbar-right hidden-xs">
                <li class="search-open">
                    <i class="fa fa-search fa-lg fa-rotate-90"></i>
                </li>
            </ul>
        </div>
    </nav>
</header>
