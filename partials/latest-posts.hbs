{{!-- Latest articles --}}
<li class="col-xs-12 col-sm-6 col-md-4 latest-list-item">
    <div class="latest-card lazyload animated fadeIn">
        <div class="latest-card-header">
            {{#if feature_image}}
                <a class="lazyload latest-image" data-src="{{img_url feature_image}}"
                    href="{{url}}" style="background-image: url({{img_url feature_image}})">
                </a>
            {{else}}
                <a href="{{url}}" class="lazyload latest-image no-image"></a>
            {{/if}}
            <div class="latest-image-overlay hidden-xs">
                {{tags limit="1"}}
            </div>
        </div>
        <div class="latest-card-content">
            <h4 class="latest-title">
                <a href="{{url}}">{{{title}}}</a>
            </h4>
            <ul class="latest-byline">
                {{> post-info}}
            </ul>
            <div class="latest-excerpt">
                <p>{{excerpt words="15"}}&hellip;</p>
            </div>
            <div class="read-more">
                <a href="{{url}}">
                    <div class="read-more-button">Read More</div>
                </a>
            </div>
        </div>
    </div>
</li>