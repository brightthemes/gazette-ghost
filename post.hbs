{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{!-- {{#post}} --}}
{{!-- Post elements --}}
<div class="wrapper container-fluid">
  <div class="row split">
    <div class="{{#post}}{{#if featured}}col-lg-12{{else}}col-lg-9{{/if}}{{/post}} content">
    {{#post}}
      <article class="{{post_class}}">

        {{!-- Post date --}}
        {{#if featured}}
          <div class="post__tag">{{tags limit="1"}}</div>
        {{/if}}

        {{!-- Title --}}
        <h1 class="post__title">{{title}}</h1>

        {{!-- Post info --}}
        <div class="post__info">
          {{!-- Author --}}
          {{#primary_author}}
            {{#if profile_image}}
            <a class="lazyload post__info-author--img" data-src="{{img_url profile_image}}"
              href="{{url}}" title="{{name}}">
            </a>
            {{/if}}
            <a class="post__info-author" href="{{url}}">{{name}}</a>
            <div class="separator"></div>
          {{/primary_author}}
          {{^if featured}}
            <div class="post__info-tag">in {{tags limit="1"}}</div>
            <div class="separator"></div>
          {{/if}}
          <time datetime="{{date format="YYYY-MM-DD"}}">{{date published_at format="YYYY MMM DD, hh:mm"}}</time>
          <div class="separator"></div>
          {{reading_time}}
        </div>

        <div class="post__body">
          {{!-- Post image --}}
          {{#if feature_image}}
            <img alt="{{title}}" class="lazyload post__image" data-src="{{img_url feature_image}}"/>
          {{/if}}

          {{!-- Post content --}}
          <div class="post__content">
            {{content}}
          </div>

          {{!-- Bottom share buttons --}}
          {{> social-share}}
        </div>

      </article>

      {{!-- Include Post author info --}}
      {{> author-box}}
      {{/post}}

      {{!-- Related Posts --}}
      {{#get "posts" include="tags,authors" limit="6" filter="id:-{{post.id}}+tags:[{{post.tags}}]" as |related|}}
        <h3 class="post-section-title" id="related-posts-title">Related posts</h3>
        <div class="related-posts row" id="related-posts">
          {{!-- Related Posts --}}
            {{#foreach related}}
              <div class="col-md-6 related-post-col">
                <div class="related-post">
                  <div class="related-post__image lazyload" style="background-image: url({{img_url feature_image}})"></div>
                  <div class="related-post__content">
                    <h4 class="related-post__title">
                      <a href="{{url}}">{{title}}</a>
                    </h4>
                    <h6 class="related-post__author">{{authors}}</h6>
                  </div>
                </div>
              </div>
            {{/foreach}}
        </div>
      {{/get}}

      {{!-- Include Disqus Comments --}}
      {{> comments}}
    </div>

    {{!-- Include sidebar --}}
    {{#post}}
    {{^if featured}}
      <aside class="col-lg-3 sidebar">
        {{> sidebar}}
      </aside>
    {{/if}}

    {{!-- Links to Previous/Next posts --}}
    {{> read-next}}
    {{/post}}
  </div>
</div>
{{!-- {{/post}} --}}
