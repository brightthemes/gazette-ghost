{{!< default}} 

{{!-- The big featured header --}} 
{{#get "posts" limit="4" include="author,tags" 
                filter="featured:true" as |featured| }} 
  <div class="grid grid-1 grid-2 grid-3 grid-4">
    {{#foreach featured}}
    <article class="grid-story">
      <div class="lazyload grid-story__image" data-src="{{img_url feature_image}}" 
          style="background-image: url({{img_url feature_image}})">
      </div>
      <a class="grid-story__trigger" href="{{url}}"></a>
      <div class="grid-story__gradient"></div>
      {{!-- <div class="grid-story__logo"></div> --}}
      {{!-- <span class="grid-story__date">{{date published_at format="MMMM DD, YYYY"}}</span> --}}
      <header class="grid-story__header">
        <div class="grid-story__header-tags">
          {{tags limit="3" separator=""}}
        </div>
        <h2 class="grid-story__header-title">
          <a href="{{url}}">{{{title}}}</a>
        </h2>
        <div class="grid-story__header-info">
          {{> post-info}}
        </div>
      </header>
    </article>
    {{/foreach}}
  </div>
{{/get}} 
  
{{!-- The main content area on the homepage --}}
<div class="wrapper container-fluid">

  {{!-- Latest posts --}} 
  {{#get "posts" filter="featured:false" order="published_at desc" 
                 limit="9" include="author,tags" as |latest|}}
  <section class="section latest-posts row">
    <h3 class="section__title">Latest news</h3>
    {{#foreach latest}} 
      {{> post-card}} 
    {{/foreach}}
  </section>
  {{/get}} 
  
  {{!-- Posts by category --}} 
  {{#get "tags" limit="6" include="count.posts" 
                order="count.posts desc" as |category|}}
  <section class="section category-posts row">
    {{#foreach category}} 
      {{> category-posts}} 
    {{/foreach}}
  </section>
  {{/get}}

</div>